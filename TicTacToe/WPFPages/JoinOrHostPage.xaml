<Page x:Class="TicTacToe.WPFPages.JoinOrHostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.WPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinOrHostPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Width="300">
            <Label Content="Enter your name:" 
                   Margin="0,30,0,0"
                   FontSize="20"
                   HorizontalAlignment="Center"/>
            <TextBox Margin="0,0,0,100" Width="200"/>
            <Button x:Name="JoinGameBtn" Content="Join a game" Height="40" Click="JoinGameBtn_Click" />
            <Button x:Name="HostGameBtn" Content="Host a game" Height="40" Click="HostGameBtn_Click" />
        </StackPanel>
    </Grid>
</Page>

<Page x:Class="TicTacToe.WPFPages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.WPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center">
            <Label Content="TicTacToe Local Multiplayer" 
                   Margin="0,30,0,100"
                   FontSize="40"/>
            <Button Content="SinglePlayer" IsEnabled="False" Height="40"/>
            <Button Content="Local Multiplayer" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
